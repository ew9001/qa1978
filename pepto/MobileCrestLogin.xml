
 <!DOCTYPE suite SYSTEM "http://beust.com/testng/testng-1.0.dtd" >
 
<suite name="Browser Login " verbose="1">
    <parameter name="param" value="Test"/>
    
    
    
    <test name="Login on browser mobileGalaxyS4">
        <parameter name="browser" value="mobileGalaxyS4"/>
        <classes>
            <class name="brand.crest.MobileCrestLogin"/>
        </classes>
 
        <groups>
            <run>
                <include name="create"/>
            </run>
        </groups>
    </test>
    
    <test name="Login on browser  mobileGalaxyS3">
        <parameter name="browser" value="mobileGalaxyS3"/>
