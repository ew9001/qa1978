 <!DOCTYPE suite SYSTEM "http://beust.com/testng/testng-1.0.dtd" >
 
<suite name="Browser Add Cart " verbose="1">
    <parameter name="param" value="Test"/>
    
    <test name="Add Cart on browser  IE10">
        <parameter name="browser" value="browserIE10"/>
        <classes>
            <class name="brand.bounty.BountyAddCartDesktop"/>
        </classes>
 
        <groups>
            <run>
                <include name="create"/>
            </run>
        </groups>
    </test>
    
    <test name="Add Cart on browser Chrome">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="brand.bounty.BountyAddCartDesktop"/>
        </classes>
 
        <groups>
            <run>
                <include name="create"/>
            </run>
        </groups>
    </test>
    
    
    
    <test name="Add Cart on browser IE11">
        <parameter name="browser" value="browserIE11"/>
        <classes>
            <class name="brand.bounty.BountyAddCartDesktop"/>
        </classes>
 
        <groups>
            <run>
                <include name="create"/>
            </run>
        </groups>
    </test>
    
    
</suite>
