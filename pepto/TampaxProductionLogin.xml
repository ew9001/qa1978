 <!DOCTYPE suite SYSTEM "http://beust.com/testng/testng-1.0.dtd" >
 
<suite name="Browser Login " verbose="1">
    <parameter name="param" value="Test"/>
    
    
    
    <test name="Login on browser Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="tampax.production.TampaxLogin"/>
        </classes>
 
        <groups>
            <run>
                <include name="create"/>
            </run>
        </groups>
    </test>
    
